<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Header">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ControlHeader" parent="Header">
        <item name="android:textSize">@dimen/componentLabel</item>
    </style>

    <style name="BlockHeader" parent="Header">
        <item name="android:textSize">@dimen/blockTitle</item>
    </style>

    <style name="BlockLayout">
        <item name="android:padding">@dimen/blockPadding</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>